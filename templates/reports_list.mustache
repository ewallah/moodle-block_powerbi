{{!
    @template block_myoverview/course-action-menu

    This template renders action menu for each course.

    Example context (json):
    {
        "hasreports": true,
        "reports": [
            {"name": "first", "viewreporturl": "/blocks/powerbi/view.php"},
            {"name": "second", "viewreporturl": "/blocks/powerbi/edit.php"}
        ]
    }
}}
{{#hasreports}}
    <ul>
        {{#reports}}
            <li><a href="{{viewreporturl}}?id={{id}}">{{name}}</a></li>
        {{/reports}}
    </ul>
{{/hasreports}}
